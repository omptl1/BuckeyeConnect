<!-- app/views/evaluations/_evaluation.html.erb -->

<style>
  .evaluation-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }

  .evaluation-table td, .evaluation-table th {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }

  .evaluation-table th {
    background-color: #f2f2f2;
  }
</style>

<table class="evaluation-table">
  <tr>
    <td><strong>Student Name:</strong></td>
    <td><%= evaluation.presentation.user.full_name %></td>
  </tr>

  <tr>
  <td><strong>Submitted by:</strong></td>
  <td><%= @evaluation.user.full_name if @evaluation.user %></td>
  </tr>

  <tr>
    <td><strong>Presentation Title:</strong></td>
    <td><%= evaluation.presentation.title %></td>
  </tr>

  <tr>
  <td><strong>Score:</strong></td>
  <td><%= evaluation.score %></td>
  </tr>

  <tr>
  <td><strong>Comments:</strong></td>
  <td><%= evaluation.comments %></td>
  </tr>
  <tr>
</table>
