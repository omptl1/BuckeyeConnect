<style>
  .evaluation-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }

  .evaluation-table td, .evaluation-table th {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }

  .evaluation-table th {
    background-color: #f2f2f2;
  }
</style>

<table class="evaluation-table">
  <thead>
    <tr>
      <th>Student Name</th>
      <th>Presentation Title</th>
    </tr>
  </thead>
  <tbody>
    <% @evaluations.each do |evaluation| %>
      <% if current_user == evaluation.user %>
        <tr>
          <td><%= evaluation.presentation.user.full_name if evaluation.presentation && evaluation.presentation.user %></td>
          <td><%= evaluation.presentation.title if evaluation.presentation %></td>
        </tr>
        <tr>
          <td colspan="2">
            <p>
              <%= link_to "Show this evaluation", evaluation %>
            </p>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
