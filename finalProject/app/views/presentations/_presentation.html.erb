<!-- app/views/presentations/_presentation.html.erb -->

<style>
  .presentation-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }

  .presentation-table td, .presentation-table th {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }

  .presentation-table th {
    background-color: #f2f2f2;
  }
</style>

<table class="presentation-table">
  <tr>
    <td><strong>Student Name:</strong></td>
    <td><%= presentation.user.full_name %></td>
  </tr>
  <tr>
    <td><strong>Title:</strong></td>
    <td><%= presentation.title %></td>
  </tr>
  <tr>
    <td><strong>Description:</strong></td>
    <td><%= presentation.description %></td>
  </tr>
  <tr>
    <td class="presentation-date"><strong>Date:</strong></td>
    <td><%= presentation.date %></td>
  </tr>
</table>
